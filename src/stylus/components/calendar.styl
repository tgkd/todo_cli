@import "../colors.styl"

.calendar
  position absolute
  top 50px
  right 15px
  background-color #ffffff
  box-shadow: 0 2px 4px 0 $shadow-color;
  z-index 900
  border-radius 2px
  font-size 14px
  &__table
    border-collapse collapse
    width 24.5em
    height 27em
  &__day
    display inline-block
    box-sizing border-box
    color #000000
    text-decoration none
    height 26px
    width 26px
    cursor pointer
    padding-top 5px
    &:hover
      background-color $blue
      color #fff
      border-radius 50%

  &__day-date
    display inline-block

  &__day--muted
    color $light-blue
    cursor default
    &:hover
      cursor default
      pointer-events none
      background #ffffff
      color $light-blue

  &__day--selected
    background-color $blue
    color #fff
    border-radius 50%

  &__day--today
    background-color $blue
    color #fff
    border-radius 50%

  &__selected-date
    display block
    text-align center
    font-weight 600
  &__day-names
    background-color $light-blue
    text-align center
    color #ffffff
    font-weight 600
    font-size 0.85em
    td
      height 40px
  &__month-name
    td
      padding 20px 0 40px 0
  &__nav
    display block
    text-decoration none
    text-align center
    color $dark-blue
  &__cell
    height 28px
    width 28px
    text-align center

@media all and (max-width: 425px)
  .calendar
    font-size 12px
    right -25px
