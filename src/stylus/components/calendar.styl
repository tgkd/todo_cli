$light-blue = #9fb3d1;
$blue = #7989b4;
$dark-blue = #2c5286;
$shadow-color = rgba(128, 128, 128, 0.5);

.calendar
  position absolute
  background-color #ffffff
  box-shadow: 0 2px 4px 0 $shadow-color;
  &__day
    display block
    color #000000
    text-decoration none
    text-align center
    padding 5px
    &:hover
      background-color $light-blue
      border-radius 50%
      color #fff

  &__day--muted
    color $light-blue

  &__day--selected
    background-color $blue
    color #fff
    border-radius 50%

  &__day--today
    background none
    color #000
    &:hover
      border-radius 50%
      color #fff

  &__selected-date
    display block
    text-align center
  &__day-names
    background-color $light-blue
    text-align center
  &__nav
    display block
    text-decoration none
    text-align center
    color $dark-blue
  &__cell
    height 28px
    width 28px
