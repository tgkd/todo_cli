.task-card
  position absolute
  box-sizing border-box
  min-width 283px
  max-width 300px
  min-height 186px
  background-color #ffffff
  box-shadow 0 2px 6px 0 rgba(0, 0, 0, 0.5)
  z-index 900
  border-radius 2px
  padding 21px 24px 25px 24px
  left 0
  top 25px
  &__header
    font-size 16px
    text-align left
    margin 0
    overflow hidden
    text-overflow ellipsis
  &__date
    font-size 11px
    color $dark-blue
    text-align left
  &__input
    width 50px
    padding-left 17px
    color $blue-input-text
  &__separator
    margin 0 7px
    color $blue-input-text
  &__inputs
    display flex
    align-items center
    margin 18px 0 23px 0
  &__btn
    float left
