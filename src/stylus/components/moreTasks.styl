.more-tasks
  position absolute
  box-sizing border-box
  min-width 283px
  max-width 300px
  min-height 186px
  background-color #ffffff
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.5);
  z-index 100
  border-radius 2px
  padding 21px 24px 25px 24px
  &__name
    margin 3px 0
    font-size 16px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    text-align left
  &__datetime
    margin 3px 0
    font-size 16px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
