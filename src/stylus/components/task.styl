.task
  background-color $task-background
  border-radius 2px
  height 40px
  position relative
  &__name
    text-align left
    font-size 16px
    color #333333
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  &__end
    font-size 11px
    color #575757
    font-weight 600
  &__end--expired
    color #c32121
    font-weight 600
  &--disabled
    display flex
    justify-content center
    align-items center
    position absolute
    z-index 100
    width 100%
    height 100%
    border-radius 2px
    background-color rgba(154, 158, 164, 0.8)

