@import "../colors.styl"

.input
  border-radius 2px
  border solid 1px
  box-sizing border-box
  padding-left 10px
  width 100%
  height 40px

.input--blue
  border-color #a3b1cd
  &:hover
    border-color $blue_border
  &:active
    border-color $blue_border
  &:focus
    outline none
    border-color $blue_border
  &:after
    border-color #7b8aa8
  &::-webkit-input-placeholder
    color $blue_placeholder
  &::-ms-input-placeholder
    color $blue_placeholder
  &::-moz-placeholder
    color $blue_placeholder
    opacity 1

.input--red
  border-color $alert
  &:active
    border-color $alert
  &:focus
    outline none
    border-color $alert
  &::-webkit-input-placeholder
    color $alert
  &::-ms-input-placeholder
    color $alert
  &::-moz-placeholder
    color $alert
    opacity 1

.input-container
  position relative
  &__img
    cursor pointer
    position absolute
  &__date
    font-size 11px
  &__calendar-ico
    margin 0 15px 0 20px
    :hover
      fill $light-blue
    :active
      fill $grey





