@import "colors.styl"

.calendar-container
  min-width 310px
  background-color #ffffff
  border-radius 2px
  &__header
    font-size 21px
    margin 50px 0
  &__day-names
    background-color $light-blue
    text-align center
  &__nav
    display block
    text-decoration none
    text-align center
    color $dark-blue
  &__row
    display flex
    width 100%
  &__cell
    min-height 120px
    width 100%
    min-width 40px
    border solid 1px $light-grey
    border-bottom 0
    border-left 0
    box-sizing border-box
  &__cell--muted
    color $light-blue
    background-color $calendar-muted-cell
  &__daynames
    margin-top 25px
    background-color $light-blue
    display flex
  &__selected-date
    font-size 16px
    font-weight 600
    color $light-navy-blue
  &__date
    text-align right
    color $calendar-date-color
    cursor default
    margin 7px
  &__date--extended
    display none
    text-align right
    margin 7px
    color $calendar-date-color

.dayname-container
  width 100%
  &__name
    float left
    color #ffffff
    font-size 13px
    font-weight 600
    margin 10px 0 10px 5px

.cell
  &__tasks-list
    display flex
    justify-content center
    flex-wrap wrap
  &__task
    background-color $calendar-cell-task
    position relative
    border-radius 3px
    margin-bottom 6px
    cursor pointer
    display flex
    justify-content space-between
    width 95%
    min-height 22px
    flex-wrap wrap
  &__task--invisible
    display none
  &__task-name
    display inline-block
    font-size 11px
    margin 5px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    max-width 80px
  &__task-time
    display inline-block
    font-size 11px
    margin 5px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

.drag-over-cell
  background-color $blue
  transition background-color 200ms linear

@media all and (max-width: 425px)
  .calendar-container__cell--muted
    display none

  .calendar-container__daynames
    display none

  .calendar-container__date
    float left

  .calendar-container__date--extended
    display block
    float left
    margin 7px 0

  .calendar-container__row
    flex-wrap wrap

  .cell__tasks-list
    display block
    margin 0 auto

  .cell__task
    margin 5px auto

  .btn-more
    margin 0 auto