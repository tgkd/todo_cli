.profile-container
  min-width 500px
  background-color #ffffff
  border-radius 2px
  &__header
    text-align center
    font-size 21px
    margin 50px 0
  &__avatar
    border-radius 50%
    margin-bottom 15px
    height 140px
    width 140px
  &__file
    width: 0.1px;
    height: 0.1px;
    opacity: 0;
    overflow: hidden;
    position: absolute;
    z-index: -1;
  &__input-name
    padding 10px 0
  &__input-date
    padding 0 35px 0 10px
  &__session
    margin-bottom 15px
    background-color #ececec
    border-radius 2px
  &__datepicker
    bottom 10px
    right 20px
  &__btn
    padding 30px 0 70px 0
  .btn-enter
    margin 0
  &__message
    text-align left

.session-name
  float left

.session-button
  overflow hidden

