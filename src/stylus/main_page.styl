.main-container
  height 100%
  display flex
  justify-content center
  &__item
    background-color #ffffff
    border-radius 2px
    margin-top 10%
    min-width 300px
  &__item-icon
    margin 80px 0 60px 0
  &__item-name
    margin-bottom 90px
    font-size 21px
  &__link
    text-decoration none
    color #000000
    margin 0 7px
  &__nav
    padding-bottom 50px
  &__item-icon-0
    padding 2px
  &__item-icon-2
    padding 9px
  &__logout
    color #fff
    height 20px
    display flex
    margin 20px 20px 0 0
    cursor pointer
