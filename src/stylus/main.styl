html
  height 100%

body
  height 100%
  margin 0
  padding 0
  display flex
  font-family "Roboto Thin"
  background-image linear-gradient(top right, $gradient_1, $gradient_2);
  background-repeat no-repeat
  background-attachment fixed

#root
  margin 0 auto
  width 100%

.avatar
  border-radius 50%

.link
  color $grey_blue
  font-size 18px

.avatar-container
  display flex
  justify-content center

.container-row
  width 100%
  margin 0 !important

.container-padding
  padding-top 10%

.noselect
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.pagecontent
  max-width 1024px
  margin auto