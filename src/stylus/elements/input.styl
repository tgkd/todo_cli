@import "../base/colors.styl"

.input
  border-radius 2px
  border solid 1px
  box-sizing border-box
  padding-left 10px
  width 100%
  height 40px

.input--blue
  border-color $default-blue-border
  &:hover
    border-color $blue_border
  &:active
    border-color $blue_border
  &:focus
    outline none
    border-color $blue_border
  &:after
    border-color $after-blue-border
  &::-webkit-input-placeholder
    color $blue-input-text
  &::-ms-input-placeholder
    color $blue-input-text
  &::-moz-placeholder
    color $blue-input-text
    opacity 1

.input--red
  border-color $alert
  &:active
    border-color $alert
  &:focus
    outline none
    border-color $alert
  &::-webkit-input-placeholder
    color $alert
  &::-ms-input-placeholder
    color $alert
  &::-moz-placeholder
    color $alert
    opacity 1

.input-container__calendar-ico:hover path
  fill $light-blue

.input-container__calendar-ico:active path
  fill $grey

.input-container
  position relative
  &__img
    cursor pointer
    position absolute
  &__date
    font-size 11px
    margin-right 20px






