.alert-ico
  max-height 20px
  &--hidden
    display none

.alert-message
  font-size 11px
  color red
  margin 0
  height 15px
  &--success
    color $dark-blue
    font-weight 600
    font-size 14px
    margin-top 5px
    height 15px
.alert-container
  margin 0
  &--hidden
    display none

.message
  float left
  white-space nowrap
