.main-container
  height 100%
  display flex
  justify-content center
  &__row
    padding-bottom 60px
  &__item
    background-color #ffffff
    border-radius 2px
    min-width 300px
  &__item-icon
    margin 80px 0 60px 0
  &__item-name
    margin-bottom 90px
    font-size 21px
  &__link
    text-decoration none
    color #000000
    margin 15px 7px
    max-height 420px
  &__nav
    padding-bottom 50px
  &__item-icon-0
    padding 2px
  &__item-icon-2
    padding 9px
  &__logout
    color #fff
    height 20px
    display flex
    margin 20px 20px 0 0
    cursor pointer

@media all and (max-width: 425px)
  .main-container
    &__link
      margin 15px 7px